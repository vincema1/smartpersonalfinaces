@model PersonalFinances.DATA.POCO.assetCategory


<div class="jumbotron">
    
    <div class="row">
        <ul class="nav nav-pills">
            <li><a href="@Url.Action("Details","Dossier",new { dossierId=Model.dossierId})" class="btn btn-primary btn-lg">Back to Dossier&raquo;</a></li>

            <li>
                <a href="@Url.Action("Index","assetCategory",new { dossierId=Model.dossierId})" class="btn btn-primary btn-lg">Handle Categories&raquo;</a>
            </li>

            <li>
                <a href="" class="btn btn-primary btn-lg">New Asset&raquo;</a>
            </li>

            <li>
                <a href="" class="btn btn-primary btn-lg">New Liability&raquo;</a>
            </li>
            <li>
                <a href="@Url.Action("Index", new { dossierId=Model.dossierId})" class=" btn btn-primary btn-lg">Back to list&raquo;</a>
            </li>

        </ul>
    </div>
</div>

@{ 
    string action = ViewBag.Action;
}

@using (Html.BeginForm(action, "AssetCategory"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>assetCategory</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <input type="hidden" name="dossierId" value="@Model.dossierId" />

        <input type="hidden" name="assetCategoryId" value="@Model.assetCategoryId" />

        <div class="form-group">
            Is Asset
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.isAsset)
                    @Html.ValidationMessageFor(model => model.isAsset, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger", placeholder = "description" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}