@if (User.Identity.IsAuthenticated)
{
   
    <div class="row">
        <div class="col-md-6">
            
                @{
                    Html.RenderAction("UserDossiers");
                 }
            
        </div>
        <div class="col-md-6">
            <h2>Create a New Dossier</h2>
         

            @using (Html.BeginForm(actionName:"Create",controllerName:"Dossier"))
            {
                @Html.ValidationSummary(true)

                <fieldset>

                   <div class="row" >
                        @*@Html.EditorFor(model => model.dossierName)
                        @Html.ValidationMessageFor(model => model.dossierName)*@
                       <div class="col-md-6">
                           <input class="form-control input-lg" placeholder="Dossier Name" type="text" name="dossierName" id="dossierName" />
                       </div>
                       <div class="col-md-6">
