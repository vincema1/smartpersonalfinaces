@model PersonalFinances.Models.dossier

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>dossier</legend>

        @Html.HiddenFor(model => model.dossierId)

        <div class="editor-label">
            @Html.LabelFor(model => model.dossierName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dossierName)
            @Html.ValidationMessageFor(model => model.dossierName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.creationDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.creationDate)
            @Html.ValidationMessageFor(model => model.creationDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.userId, "user")
        </div>
        <div class="editor-field">
            @Html.DropDownList("userId", String.Empty)
            @Html.ValidationMessageFor(model => model.userId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
